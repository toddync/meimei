{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "meimei",
  "version": "0.1.0",
  "identifier": "meimei",
  "build": {
    "beforeDevCommand": "pnpm dev",
    "devUrl": "http://localhost:1420",
    "beforeBuildCommand": "pnpm build",
    "frontendDist": "../dist"
  },
  "app": {
    "windows": [
      {
        "title": "meimei",
        "backgroundColor": "#0a0a0a",
        "minWidth": 768,
        "width": 1120,
        "height": 630,
        "decorations": false
      }
    ],
    "security": {
      "csp": null
    }
  },
  "plugins": {
        "fs": {
      "requireLiteralLeadingDot": false
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ]
  }
}
