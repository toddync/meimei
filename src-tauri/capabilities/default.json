{
  "$schema": "../gen/schemas/desktop-schema.json",
  "identifier": "default",
  "description": "Capability for the main window",
  "windows": [
    "main"
  ],
  "permissions": [
    "core:default",
    "opener:default",
    {
      "identifier": "fs:scope",
      "allow": [
        {
          "path": "**"
        }
      ]
    },
    "fs:default",
    "fs:allow-remove",
    "fs:allow-exists",
    "fs:allow-read",
    "fs:allow-write",
    "fs:allow-create",
    "fs:allow-rename",
    "fs:allow-read-dir",
    "fs:allow-mkdir",
    "dialog:default"
  ]
}